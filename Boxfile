  name: meetphp8silex 
  document_root: silex/public
  shared_writable_dirs:
    - /silex/storage/cache
    - /silex/storage/sessions
    - /silex/storage/logs
    - /silex/storage/client
  php_version: 5.3.10
  php_extensions:
    - curl
    - http
    - zip
  after_build:
    - "if [ ! -f silex/composer.phar ]; then curl -s http://getcomposer.org/installer | php; fi; php silex/composer.phar install"
  after_deploy:
    - "rm -f /silex/storage/cache/*"
